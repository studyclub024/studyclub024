{
  "name": "studyclub24",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:3000": "npx vite --host 0.0.0.0 --port 3000",
    "server": "nodemon --exec ts-node server/index.ts",
    "server:build": "tsc -p server/tsconfig.json",
    "server:start": "node server/dist/index.js",
    "build:android": "npm run build && npx cap copy android && cd android && .\\gradlew.bat assembleDebug",
    "android:init": "npx cap init studyclub24 com.yourcompany.studyclub24 --web-dir=dist",
    "android:add": "npx cap add android",
    "android:open": "npx cap open android",
    "android:copy": "npx cap copy android",
    "android:build": "npm run build && npx cap copy android && npx cap open android",
    "firebase:deploy": "npm run build && npx firebase deploy",
    "firebase:deploy:hosting": "npm run build && npx firebase deploy --only hosting",
    "firebase:deploy:functions": "cd functions && npm install && cd .. && npx firebase deploy --only functions",
    "firebase:emulators": "npm run build && npx firebase emulators:start",
    "firebase:logs": "npx firebase functions:log",
    "seed": "ts-node scripts/seedData.ts",
    "admin": "open http://localhost:3000?admin=true || start http://localhost:3000?admin=true"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@google/genai": "^1.33.0",
    "@types/crypto-js": "^4.2.2",
    "@types/papaparse": "^5.5.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "firebase": "^12.8.0",
    "firebase-admin": "^13.6.0",
    "katex": "^0.16.27",
    "lucide-react": "^0.561.0",
    "papaparse": "^5.5.3",
    "razorpay": "^2.9.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.14.0",
    "@vercel/node": "^5.5.16",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "firebase-tools": "^15.5.1",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
